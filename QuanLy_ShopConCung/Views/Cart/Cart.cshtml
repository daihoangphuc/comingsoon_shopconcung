@{
	@using System.Globalization;
}
@model Cart
<!-- Cart -->
<div class="wrap-header-cart js-panel-cart" >
	<div class="s-full js-hide-cart"></div>

	<div class="header-cart flex-col-l p-l-65 p-r-25">
		<div class="header-cart-title flex-w flex-sb-m p-b-8">
			<span class="mtext-103 cl2">
				Your Cart
			</span>

			<div class="fs-35 lh-10 cl2 p-lr-5 pointer hov-cl1 trans-04 js-hide-cart">
				<i class="zmdi zmdi-close"></i>
			</div>
		</div>

		<div class="header-cart-content flex-w js-pscroll">
			<ul class="header-cart-wrapitem w-full">



				@if (Model != null && Model.Lines != null)
				{
					@foreach (var line in Model.Lines)
					{
						<li class="header-cart-item flex-w flex-t m-b-12">
							<a href="/Cart/RemoveFromCart/?productId=@line.Product.ProductId" class="header-cart-item-img">
								<img src="@line.Product.ProductPhoto" alt="IMG">
							</a>

							<div class="header-cart-item-txt p-t-8">
								<a href="#" class="header-cart-item-name m-b-18 hov-cl1 trans-04">
									@line.Product.ProductName
								</a>

								<span class="header-cart-item-info">
									@line.Quantity x @line.Product.ProductPrice VND
								</span>
							</div>
						</li>
					}

				}

			</ul>

			<div class="w-full">
				<div class="header-cart-total w-full p-tb-40">
					Total: @Model?.ComputeTotalValues().ToString("C", CultureInfo.CreateSpecificCulture("vi-VN")).TrimEnd('₫') VND
				</div>

				<div class="header-cart-buttons flex-w w-full">
					<a href="/Cart" class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-r-8 m-b-10">
						View Cart
					</a>

					<a href="/Cart" class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-b-10">
						Check Out
					</a>
				</div>
			</div>
		</div>
	</div>
</div>


<!-- breadcrumb -->
<div class="container" >
	<div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
		<a href="/" class="stext-109 cl8 hov-cl1 trans-04">
			Home
			<i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
		</a>

		<span class="stext-109 cl4">
			Shoping Cart
		</span>
	</div>
</div>


<!-- Shoping Cart -->
<form class="bg0 p-t-75 p-b-85" >
	<div class="container">
		<div class="row">
			<div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
				<div class="m-l-25 m-r--38 m-lr-0-xl">
					<div class="wrap-table-shopping-cart">
						<table class="table-shopping-cart">
							<tr class="table_head">
								<th class="column-1">Product</th>
								<th class="column-2"></th>
								<th class="column-3">Price</th>
								<th class="column-4">Quantity</th>
								<th class="column-5">Total</th>
							</tr>
							@if (Model != null && Model.Lines != null)
							{
								@foreach (var line in Model.Lines)
								{


									<tr class="table_row">
										<td class="column-1">
											<a href="/Cart/RemoveFromCart/?productId=@line.Product.ProductId" class="how-itemcart1">
												<img src="@line.Product.ProductPhoto" alt="IMG">
											</a>
										</td>
										<td class="column-2">@line.Product.ProductName</td>
										<td class="column-3">@line.Product.ProductPrice.ToString("C", CultureInfo.CreateSpecificCulture("vi-VN")).TrimEnd('₫')</td>
										<td class="column-4">
											<div class="wrap-num-product flex-w m-l-auto m-r-0">
												<div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
													<a href="/Cart/DecreaseQuantity/?productId=@line.Product.ProductId">
														<i class="fs-16 zmdi zmdi-minus"></i>
													</a>
												</div>

												<input class="mtext-104 cl3 txt-center num-product" type="number" name="num-product1" value="@line.Quantity">

												<div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
													<a href="/Cart/IncreaseQuantity/?productId=@line.Product.ProductId">
														<i class="fs-16 zmdi zmdi-plus"></i>
													</a>
												</div>
											</div>
										</td>
										<td class="column-5">
											@{
												int kq = @line.Product.ProductPrice * @line.Quantity;
											}
											@kq.ToString("C", CultureInfo.CreateSpecificCulture("vi-VN")).TrimEnd('₫')
										</td>
									</tr>
								}
							}
						</table>
					</div>

					<!--
						<div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm">
						<div class="flex-w flex-m m-r-20 m-tb-5">
							<input class="stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-r-10 m-tb-5" type="text" name="coupon" placeholder="Coupon Code">

							<div class="flex-c-m stext-101 cl2 size-118 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-5">
								Apply coupon
							</div>
						</div>

					<a href="/Cart/ShowCart/?productId=1" class="flex-c-m stext-101 cl2 size-119 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-10">
							Update Cart
						</a>
					</div>
						-->
					<a href="/Products" class="flex-c-m stext-101 cl2 size-119 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-10">
						Mua Thêm
					</a>
				</div>
			</div>

			<div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
				<div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
					<h4 class="mtext-109 cl2 p-b-30">
						Cart Totals
					</h4>

					<div class="flex-w flex-t bor12 p-b-13">
						<div class="size-208">
							<span class="stext-110 cl2">
								Subtotal:
							</span>
						</div>

						<div class="size-209">
							<span class="mtext-110 cl2">

								@functions {
									public int subtotal()
									{
										if (Model != null && Model.ComputeTotalValues() != null)
										{
											return @Model.ComputeTotalValues();

										}
										else return 0;


									}
								}

								@subtotal().ToString("C", CultureInfo.CreateSpecificCulture("vi-VN")).TrimEnd('₫') VND
							</span>
						</div>
					</div>

					<div class="flex-w flex-t bor12 p-t-15 p-b-30">
						<div class="size-208">
							<span class="stext-110 cl2">
								Shipping:
							</span>
						</div>

						<div class="size-209">
							<span class="mtext-110 cl2">
								100.000 VND
							</span>
						</div>


					</div>

					<div class="flex-w flex-t p-t-27 p-b-33">
						<div class="size-208">
							<span class="mtext-101 cl2">
								Total:
							</span>
						</div>

						<div class="size-209 p-t-1">
							<span class="mtext-110 cl2">
								<!--Chinh  sua-->
								@functions {
									public int total()
									{
										if (Model != null && Model.ComputeTotalValues() != null)
										{
											return @Model.ComputeTotalValues() + 100000;

										}
										else return 0;

										
									}
								}

					
								@total().ToString("C", CultureInfo.CreateSpecificCulture("vi-VN")).TrimEnd('₫') VND
							</span>
						</div>
					</div>

					<a href="/Cart" class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
						Proceed to Checkout
					</a>
				</div>
			</div>
		</div>
	</div>
</form>