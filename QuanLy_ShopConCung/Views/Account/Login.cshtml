@model User 
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Modernize Free</title>
    <link rel="shortcut icon" type="image/png" href="/Admin_sources/images/logos/favicon.png" />
    <link rel="stylesheet" href="/Admin_sources/css/styles.min.css" />
</head>

<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center" style="background-color: #f6f7fd">
            <div class="d-flex align-items-center justify-content-center w-100">
                <div class="row justify-content-center w-100">
                    <div class="col-md-8 col-lg-6 col-xxl-3">
                        <div class="card mb-0">
                            <div class="card-body">
                                <a href="/" class="text-nowrap logo-img text-center d-block py-3 w-100">
                   
                               
                                    <p>
                                        <img src="/images/logo.png" width="150" alt="">
                                    </p>
                                </a>
                                <p class="text-center">Đăng nhập</p>
                              

                                @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                                {
                                    @if (ViewBag.LoginStatus != null && ViewBag.LoginStatus == 0)
                                    {
                                        <div class="error_login">
                                            <p style="color:red">
                                                Nhập sai tên đăng nhập hoặc mật khẩu, hãy thử lại!
                                            </p>
                                        </div>
                                    }
                                    
                                    <div class="mb-3">
                                        <label asp-for="UserEmail" class="control-label"></label>
                                        <!--
                                             <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                                        -->
                                        @Html.TextBoxFor(m=>m.UserEmail, new {@placeholder = "Nhập Email", @class="form-control"})
                                    </div>
                                    <div class="mb-4">
                                        <label asp-for="UserPassword" class="control-label"></label>
                                       <!--
                                             <input type="password" class="form-control" id="exampleInputPassword1">
                                       -->
                                        @Html.TextBoxFor(m=>m.UserPassword, new {@placeholder = "Nhập mật khẩu",  @class="form-control", @type="password"})
                                    </div>
                                    <!--<div class="d-flex align-items-center justify-content-between mb-4">
                                        <div class="form-check">
                                            <input class="form-check-input primary" type="checkbox" value="" id="flexCheckChecked" checked>
                                            <label class="form-check-label text-dark" for="flexCheckChecked">
                                                Remeber this Device
                                            </label>
                                        </div>
                                        <a class="text-primary fw-bold" href="#">Forgot Password ?</a>
                                    </div>-->
                                    <button type="submit" class="btn btn-primary w-100 py-8 fs-4 mb-4 rounded-2">Đăng Nhập</button>
                                    <div class="d-flex align-items-center justify-content-center">
                                        <p class="fs-4 mb-0 fw-bold">Bạn chưa có tài khoản?</p>
                                        <a class="text-primary fw-bold ms-2" href="/Register/Create">Đăng kí ngay</a>
                                    </div>
                                }


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/Admin_sources/libs/jquery/dist/jquery.min.js"></script>
    <script src="/Admin_sources/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>