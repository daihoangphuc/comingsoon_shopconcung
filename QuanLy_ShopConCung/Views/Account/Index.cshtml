@using System.Globalization;
 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
{
    <script>
        window.location.href = '@Url.Action("Index", "Admin")';
    </script>

}
else
{
    <script>
        alert("Xin chào khách hàng@{
            TextInfo textInfo = CultureInfo.CurrentCulture.TextInfo;

            // Sử dụng ToTitleCase để viết hoa chữ cái đầu tiên
            string result = textInfo.ToTitleCase(User.Identity.Name.Split('@')[0]);
        } @result, giờ bạn đã có thể mua hàng tại đây!")
        window.location.href = '@Url.Action("Index", "Products")';
    </script>
}


